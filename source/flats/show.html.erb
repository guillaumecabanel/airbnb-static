<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<div class="flat-banner" style="background-image: url('<%= image_path(flat.banner) %>')">
</div>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">

        <div class="flat-info">
          <div class="flat-owner text-center">
            <%= image_tag flat.owner_picture, class: "avatar-large" %>
            <p><%= flat.owner_name %></p>
          </div>
          <div class="flat-description">
            <h3><%= flat.summary %></h3>
            <p><%= flat.city %></p>
            <ul class="list-inline">
              <% flat.rate.times do %>
                <li class="gold"><i class="fa fa-star"></i></li>
              <% end %>
              <% (5-flat.rate).times do %>
                <li class="grey"><i class="fa fa-star"></i></li>
              <% end %>
            </ul>
          </div>
        </div>


    </div>

    <div class="col-xs-12 col-sm-6">
      <div class="booking-form">
        <h3>Book this flat</h3>
        <form action="">
          <div class="row">
            <div class="col-xs-6">
              <input type="text" class="form-control" placeholder="checkin">
            </div>
            <div class="col-xs-6">
              <input type="text" class="form-control" placeholder="checkout">
            </div>
          </div>
          <br>
          <select class="form-control">
            <option value="1" selected>1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
          <br>
          <input type="submit" class="btn btn-danger btn-block" value="Book it">
        </form>
      </div>
    </div>
  </div>
</div>

<div class="wrapper-grey">
  <div class="container">

    <h2>About this flat</h2>

    <p>This one bedroom studio lodges 2 people (there's 1 double bed) it is located in the city center, in a calm traditional residential area near city´s main Avenue - 3 minutes walk from Sacré Coeur.</p>

    <hr>

    <div class="row">
      <div class="col-xs-12 col-sm-2"><h3>The Space</h3></div>
      <div class="col-xs-12 col-sm-10">
        <ul>
          <li>Accommodates: <strong><%= flat.accommodates %></strong></li>
          <li>Bathrooms: <strong><%= flat.bathrooms %></strong></li>
          <li>Bed type: <strong><%= flat.bed_type %></strong></li>
          <li>Bedrooms: <strong><%= flat.bedrooms %></strong></li>
          <li>Beds: <strong><%= flat.beds %></strong></li>
          <li>Property type: <strong><%= flat.property_type %></strong></li>
          <li>Room type: <strong><%= flat.room_type %></strong></li>
        </ul>
      </div>
    <hr>

    <div class="row">
      <div class="col-xs-12 col-sm-2"><h3>Amenities</h3></div>

      <div class="col-xs-12 col-sm-10">

        <div class="container">
          <div class="row">
            <div class="col-xs-6 col-sm-4">
              <% if flat.wifi %>
                <p><i class="fa fa-wifi"></i> Wifi</p>
              <% end %>
            </div>

            <div class="col-xs-6 col-sm-4">
              <% if flat.kitchen %>
                <p><i class="fa fa-cutlery "></i> Kitchen</p>
              <% end %>
            </div>

            <div class="col-xs-6 col-sm-4">
              <% if flat.television %>
                <p><i class="fa fa-television"></i> TV</p>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
